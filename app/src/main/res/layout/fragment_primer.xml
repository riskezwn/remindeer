<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgFragment1"
            android:layout_width="375dp"
            android:layout_height="375dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_undraw_task" />

        <TextView
            android:id="@+id/tvTituloFragmentUno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Organiza tus tareas"
            android:textAlignment="center"
            android:fontFamily="@font/poppinssemibold"
            android:textColor="@color/black"
            android:textSize="35sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDescripcionFragment1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="Mejora tu rendimiento, organizando tus tareas de forma sencilla y visual"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="bold" />


    </LinearLayout>

</FrameLayout>