<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Welcome.BienvenidaActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_ellipse_2circle1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="55dp"
        android:fontFamily="@font/poppinssemibold"
        android:text="Bienvenido a ReminDeer"
        android:textColor="#FFFFFFFF"
        android:textSize="42sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="375dp"
            android:layout_height="375dp"
            android:layout_gravity="center"
            android:layout_marginTop="200dp"
            android:src="@drawable/ic_reno1nv" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:orientation="vertical">


        <com.google.android.material.button.MaterialButton
            android:fontFamily="@font/poppinsmedium"
            android:id="@+id/btnGoogle"
            style="@style/btnPrincipal"
            android:layout_marginTop="45dp"
            android:backgroundTint="@color/white"
            android:elevation="15dp"
            android:text="INICIAR SESIÓN CON GOOGLE"
            android:textColor="@color/textColor"
            app:cornerRadius="10dp"
            app:icon="@drawable/ic_google"
            app:iconSize="20dp"
            app:iconTintMode="multiply" />

        <com.google.android.material.button.MaterialButton
            android:fontFamily="@font/poppinsmedium"
            android:id="@+id/btnIniciar"
            style="@style/btnPrincipal"
            android:text="INICIAR SESIÓN"
            app:cornerRadius="10dp" />

        <TextView
            android:fontFamily="@font/poppinsmedium"
            android:id="@+id/btnRegistrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true"
            android:text="¿Eres nuevo? Regístrate"
            android:textSize="16dp" />

    </LinearLayout>
</RelativeLayout>